<Window x:Class="WpfDolgozat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dolgozatok" Height="500" Width="700">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dgAdatok" Grid.Row="0" AutoGenerateColumns="True"
                  Margin="0 0 0 10" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 10 0 10">

            <StackPanel Margin="10">
                <TextBlock Text="Név:"/>
                <TextBox x:Name="tbNev" Width="150"/>
            </StackPanel>

            <StackPanel Margin="10">
                <TextBlock Text="Életkor:"/>
                <TextBox x:Name="tbEletkor" Width="80"/>
            </StackPanel>

            <StackPanel Margin="10">
                <TextBlock Text="Pontszám:"/>
                <TextBox x:Name="tbPontszam" Width="80"/>
            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">

            <Button x:Name="btnHozzaad" Content="Hozzáadás" Width="120"
                    Margin="10" Click="btnHozzaad_Click"/>

            <Button x:Name="btnMentes" Content="Mentés" Width="120"
                    Margin="10" Click="btnMentes_Click"/>

        </StackPanel>
    </Grid>
</Window>